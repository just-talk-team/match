pipeline {
    agent any

    tools {
        nodejs '12.18.4'
    }

    options {
        timeout(time: 2, unit: 'MINUTES')
    }

    stages {
        stage('Install from yarn') {
            when {
                branch 'master'
            }
            steps {
                sh 'yarn install'
            }
        }
        stage('Test') {
            when {
                branch 'master'
            }
            steps {
                sh 'yarn test'
            }
        }
    }
}